{% extends 'admin/base.html.twig' %}

{% block title %}Administration des réservations !{% endblock %}

{% block body %}

<h1 class="my-5">Administration des réservations</h1>

<table class="table table-over">
<thead>
    <tr>
        <th>ID</th>
        <th>Date</th>
        <th>Visiteur</th>
        <th class="text-center">Annonce</th>
        <th>Durée</th>
        <th>Montant</th>
    </tr>
</thead>
<tbody>
{% for booking in bookings %}
<tr>
    <td>{{ booking.id }}</td>
    <td>{{ booking.createdAt|date('d/m/Y')}}</td>
    <td>
    <img src="{{ booking.booker.picture }}" alt="Avatar de {{ booking.booker.fullName }}"
    class="avatar avatar-micro mr-2">{{ booking.booker.fullName }}
    </td>
    <td >
    {{ booking.ad.title }}
    </td>
    <td>
    {{ booking.duration }}
    </td>
    <td>
    {{ booking.amount|number_format(2, ',', ' ') }}&euro;
    </td>
    <td>
    <a href="{{ path('admin_booking_edit', {'id': booking.id}) }}" class="btn btn-primary"><i class="fas fa-edit"></i></a>
    <a href="{{ path('admin_booking_delete', {'id': booking.id}) }}" class="btn btn-danger"><i class="fas fa-trash"></i></a>
    </td>
</tr>
{% endfor %}
</tbody>
</table>
</div>
{% endblock %}
