{% extends 'admin/base.html.twig' %}
{% block title %}Modification du commentaire n°
    {{ comment.id }}
{% endblock %}

{% form_theme form _self %}

{%   block body %}
    <div class="container">
        <h1 class="my-5">Modification du commentaire n°
            {{ comment.id }}</h1>
        {{ form_start(form) }}
                <div class="alert alert-info">

                    <p><strong>Annonce liée :</strong>
                       {{ comment.ad.title}}</p>
                    <p><strong>Auteur :</strong>
                        {{ comment.ad.author.fullName }}</p>
                    <p><strong>Date de création :</strong>
                        {{ comment.createdAt|date('d/m/Y') }}</p>
                    <p><strong>Note donnée :</strong>
                        {{ comment.rating }}</p>
                </div>
                <div class="card-body">

                    {% block _comment_rating_entry_row %}
                        <div hidden>{{ form_widget(form.rating) }}</div>
                        <div>
                        <p>Contenu du commentaire</p>
                            {{ form_widget(form.content) }}
                        </div>
                    {% endblock %}
                    <button class="btn btn-primary mt-3" type="submit">
                        <i class="fas fa-check">Enregistrer les modifications</i>
                    </button>
                </div>
        {{ form_end(form) }}
    {% endblock %}
